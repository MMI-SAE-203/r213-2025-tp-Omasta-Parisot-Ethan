---
import { getOffres } from '../../js/backend.mjs';
import { getOffre } from '../../js/backend.mjs';
import Base from '../../layouts/Base.astro';

const { id } = Astro.params;
const offre = await getOffre(id);
if(!offre){
   return Astro.redirect('/offres');
}
---

<Base titre={offre.nomMaison}>
    <h2>{offre.nomMaison}</offre>
    <ul>
        <li>{offre.adresse}</li>
        <li>{offre.prix}</li>
        <li>{offre.images}</li>
        <li>{offre.nbChambres}</li>
        <li>{offre.nbSdb}</li>
        <li>{offre.surface}</li>
    </ul>
</Base>